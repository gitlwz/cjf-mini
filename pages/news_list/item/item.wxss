.itemRecord {
  display: flex;
  flex-direction: row;
  justify-content: space-between;
  align-items: center;
  width: 100%;
  height: 230rpx;
  border-bottom: 1px solid #F2F6F7;
}

.itemRecord .content {
  flex-grow: 1;
  height: 150rpx;
  margin-right: 20rpx;
  position: relative;
}

.itemRecord .content .title {
  position: absolute;
  top: 0;
  color: #333;
  font-size: 32rpx;
  font-weight: bold;
  display: -webkit-box;
  word-break: break-all;
  text-overflow: ellipsis;
  overflow: hidden;
  -webkit-box-orient: vertical;
  -webkit-line-clamp: 2;
}
.bottom{
  position: absolute;
  bottom: 0;
  display: flex;
  flex-direction: row;
}
.itemRecord .content .source {
  font-size: 22rpx;
  color: #999;
}

.itemRecord .content .date {

  font-size: 22rpx;
  color: #999;
}

.itemRecord .thumbnail {
  width: 220rpx;
  height: 150rpx;
  border-radius: 8rpx;
}
