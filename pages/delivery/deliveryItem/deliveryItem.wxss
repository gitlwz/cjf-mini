/* pages/delivery/deliveryItem/deliveryItem.wxss */
.deliveryStore{
  background: #fff;
  padding: 0 30rpx 30rpx;
  border-bottom: 1px solid #F2F6F7;
  border-radius:8rpx;
  margin-bottom: 20rpx;
}
.left-icon{
  width: 28rpx;
  height: 28rpx;
}
.storeName{
font-size:32rpx;
font-family:PingFangSC-Medium,PingFang SC;
font-weight:500;
color:rgba(51,51,51,1);
line-height:48rpx;
/* padding-bottom: 12rpx; */
height: 84rpx;
display: flex;
align-items: center;
flex-direction: row;
border-bottom: 1px solid #F2F6F7;
}
.storeImg{
  width: 50rpx;
  height: 50rpx;
  margin-right: 15rpx;
}

.detail{
  width:100rpx;
height:44rpx;
border-radius:4rpx;
border:1px solid rgba(208,161,108,1);
color:rgba(208,161,108,1);
line-height: 40rpx;
text-align: center;
font-weight: normal;
font-size: 24rpx;

}
.label{
font-size:26rpx;
font-weight:400;
color:rgba(102,102,102,1);
line-height:42rpx;
margin-left: 15rpx;
flex: 1;
}
.row{
  margin-bottom: 12rpx;
  display: flex;
  align-items: center;
}
.deliveryKnowledge{
  height: 90rpx;
  text-overflow: ellipsis;
  line-height: 90rpx;
  background: #fff;
  white-space: nowrap;
  overflow: hidden;
  border-bottom: 1px solid #F2F6F7;
}
