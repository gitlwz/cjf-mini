/* 轮播背景样式 */
page {
  background: #f5f5f5;
}
.index {
  display: flex;
  flex-direction: column;
}

.index .content {
  background-color: #fff;
  padding-left: 30rpx;
  padding-right: 30rpx;
}

.index .index-bg {
  width: 100%;
  height: 280rpx;
  position: relative;
  display: flex;
  justify-content: center;
  border-radius: 16rpx;
}

.index .index-bg swiper {
  width: 100%;
  height: 100%;
  position: relative;
}

.index .index-bg swiper-item {
  border-radius: 16rpx;
}

.index .index-bg .slide-navigator {
  width: 100%;
  height: 100%;
}

.index .index-bg .slide-navigator .slide-image {
  width: 100%;
  height: 100%;
}

.index .index-bg .wx-swiper-dot {
  width: 20rpx;
  height: 5rpx;
  border-radius: 3rpx;
}

.index .index-bg .wx-swiper-dots.wx-swiper-dots-horizontal {
  margin-bottom: 5rpx;
}

/* 通知样式 */

.index .news {
  height: 77rpx;
  margin-top: 20rpx;
  display: flex;
  flex-wrap: wrap;
  align-items: center;
  justify-content: space-between;
}

.index .news .pictrue {
  display: flex;
  flex-direction: row;
  align-items: center;
  border-right: 1rpx solid #ddd;
  box-sizing: content-box;
}

.index .news .pictrue .name {
  color: #333;
  font-weight: bold;
  font-size: 24rpx;
  padding-right: 10rpx;
}

.index .news .pictrue image {
  width: 2rpx;
  height: 25rpx;
}

.index .news .swiperTxt {
  flex-grow: 1;
  height: 100%;
  padding-left: 20rpx;
  line-height: 77rpx;
  overflow: hidden;
}

.index .news .name {
  color: #333;
  font-size: 24rpx;
}

.index .news .swiperTxt .text {
  display: flex;
  flex-direction: row;
  flex-wrap: wrap;
  align-items: center;
  justify-content: space-between;
  width: 100%;
}

.index .news .swiperTxt .text .newsTitle {
  flex-grow: 1;
  font-size: 24rpx;
  color: #333;
  overflow: hidden;
  width: 500rpx;
  text-overflow: ellipsis;
  white-space: nowrap;
}

.index .news .swiperTxt swiper {
  height: 100%;
}

.index .news .swiperTxt swiper-item navigator {
  align-items: center;
  display: flex;
  flex-direction: row;
}

.index .hot-ins {
  margin-bottom: 20rpx;
  width: 100%;
  height: 170rpx;
}

.index .hot-ins swiper {
  width: 100%;
  height: 100%;
}

.index .hot-ins swiper swiper-item {
  display: flex;
  flex-direction: row;
}

.index .hot-ins swiper swiper-item .navigator {
  height: 100%;
  width: 20px;
}

.index .hot-ins .wx-swiper-dot {
  width: 20rpx;
  height: 5rpx;
  border-radius: 3rpx;
}

.index .hot-ins .wx-swiper-dots.wx-swiper-dots-horizontal {
  margin-bottom: -18rpx;
}

.hot-ins-item {
  border: 0.5rpx solid #ddd;
  height: 150rpx;
  flex-grow: 1;
  max-width: 218rpx;
  margin-right: 18rpx;
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
}

.hot-ins-item:nth-of-type(1) {
  margin-left: 0rpx;
}

.hot-ins-item:last-child {
  margin-right: 0rpx;
}

.hot-ins-item .title {
  color: #333;
  font-size: 24rpx;
  font-weight: bold;
}

.hot-ins-item .text-price {
  color: #ea5b28;
  font-size: 24rpx;
}

.hot-ins-item .text-rise {
  color: #ea5b28;
  font-size: 24rpx;
}

.index .guide {
  width: 100%;
  height: 140rpx;
  background: #f7f7fb;
  border-radius: 6rpx;
  margin: 20rpx 10rpx;
  display: flex;
  align-items: center;
}

.guid-info-container {
  display: flex;
  flex-direction: row;
  align-items: center;
}

.index .guide .left {
  height: 100rpx;
  width: 119rpx;
  margin-left: 25rpx;
}

.index .guide .guide-text {
  height: 100%;
  flex-grow: 1;
  display: flex;
  margin-left: 31rpx;
  flex-direction: column;
  justify-content: center;
}

.index .guide-text .title {
  color: #a26542;
  font-size: 30rpx;
  font-weight: bold;
  margin-bottom: 4rpx;
}
.index .guide-text .context {
  color: #999999;
  font-size: 22rpx;
}

.index .guide-text .tip {
  color: #999;
  font-size: 24rpx;
  font-weight: bold;
}

.index .guide-more {
  height: 100%;
  display: flex;
  align-items: center;
  justify-content: flex-end;
  padding-right: 50rpx;
}

/* 最新资讯 */

.index .nav {
  width: 100%;
  white-space: nowrap;
  box-sizing: border-box;
  display: flex;
}

.index .nav scroll-view {
  flex-grow: 1;
}

.index .nav .item {
  flex-grow: 1;
  display: inline-block;
  font-size: 28rpx;
  color: #999;
}

.index .nav .more {
  display: inline-flex;
  flex-grow: 0;
  flex-direction: row;
  align-items: center;
  justify-content: center;
  margin-bottom: 8rpx;
}

.index .nav .item.on {
  color: #333;
  font-size: 36rpx;
  font-weight: bold;
}

.index .nav .item~.item {
  margin-left: 40rpx;
}

.index .nav .item .line {
  width: 40rpx;
  height: 8rpx;
  border-radius: 4rpx;
  margin: 10rpx auto 0 auto;
}

.selected-color {
  background-color: #d0a16c;
}

.index .footer {
  flex-grow: 1;
  color: #ccc;
  font-size: 24rpx;
  text-align: center;
  width: 100%;
  padding-top: 30rpx;
  padding-bottom: 30rpx;
}
