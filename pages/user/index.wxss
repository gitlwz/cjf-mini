page{
  background:#f5f5f5;
}
.login-in {
  width: 100%;
  height: 420rpx;
  background: #fff;
  padding-top: 50rpx;
}

.login-out {
  height: 230rpx;
  background: #fff;
  padding: 0 0 0 40rpx;
  display: flex;
  align-items: center;
}

.unLogin {
  font-size: 40rpx;
  font-weight: 600;
  color: rgba(17, 17, 17, 1);
  line-height: 60rpx;
}

.more {
  font-size: 24rpx;
  font-weight: 400;
  color: rgba(153, 153, 153, 1);
  line-height: 40rpx;
}

.user {
  margin: 0 0 50rpx 40rpx;
  display: flex;
  align-items: center;
}

.user-image {
  width: 130rpx;
  height: 130rpx;
  border-radius: 50%;
  margin-right: 30rpx;
}

.user-name {
  font-size: 40rpx;
  font-weight: 500;
  color: rgba(17, 17, 17, 1);
}

.button {
  margin: 0 20rpx;
  display: flex;
  justify-content: space-around;
}

.single-button {
  width: 130rpx;
  text-align: center;
}

.button-image {
  width: 80rpx;
  height: 80rpx;
}

.button-text {
  text-align: center;
}

.bottom {
  height: 860rpx;
  background: #fff;
  padding: 0 40rpx 21rpx;
  margin-top: 20rpx;
}

.little-icon {
  width: 38rpx;
  height: 38rpx;
  margin-right: 28rpx;
}

.bottom-li {
  height: 130rpx;
  display: flex;
  align-items: center;
  border-bottom: 1px solid #F2F6F7;
}

.bottom-text {
  font-size: 32rpx;
  font-weight: 400;
  color: rgba(51, 51, 51, 1);
  flex: 1;
}

.right-arrow {
  width: 28rpx;
  height: 28rpx;
  float: right;
}

.out {
  width: 670rpx;
  height: 80rpx;
  line-height: 80rpx;
  background: rgba(242, 246, 247, 1);
  border-radius: 4rpx;
  margin: 67rpx auto 0;
  font-size: 34rpx;
  font-weight: 400;
  color: rgba(153, 153, 153, 1);
}
.out:after {
  border: none;
}

