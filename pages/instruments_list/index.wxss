
.tab{
  height: 90rpx;
}

page {
  width: 100%;
  overflow-x:hidden;
}

.nav-bar-container{
  display: block;
    width: 100%;
}
.nav-package{
  height: 100rpx;
  display:block;
  margin-bottom:15rpx;
}
.news-list {
  /* background-color: #fff; */
  width: 100%;
  /* padding-left: 30rpx;
  padding-right: 30rpx; */
  display: flex;
  flex-direction: column;
}

.news-list .nav {
  position: fixed;
  width: 100%;
  z-index: 100;
  white-space: nowrap;
  box-sizing: border-box;
  height: 100rpx;
  display: flex;
  background-color: #fff;
  justify-content: center;
}

.news-list .nav scroll-view {
  display: flex;
  flex-direction: row;
  justify-content: center;
}

.news-list .nav .item {
  flex-grow: 1;
  display: inline-block;
  font-size: 28rpx;
  color: #999;
}

.news-list .nav .item.on {
  color: #333;
   font-size: 36rpx; 
  font-weight: bold; 
}

.news-list .nav .item~.item {
  margin-left: 80rpx;
}

.news-list .nav .item .line {
  width: 40rpx;
  height: 8rpx;
  border-radius: 4rpx;
  margin: 10rpx auto 0 auto;
}

.news-list .selected-color {
  background-color: #d0a16c;
}

.news-list .list {
  width: 100%;
}

.news-list .list .header {
  width: 100%;
  height: 320rpx;
  position: relative;
}

.news-list .list .header image {
  width: 100%;
  height: 100%;
  border-radius: 16rpx;
}

.news-list .list .header .mask {
  width: 100%;
  position: absolute;
  bottom: 0;
  height: 80rpx;
  border-bottom-left-radius: 16rpx;
  border-bottom-right-radius: 16rpx;
  color: #fff;
  font-size: 32rpx;
  font-weight: bold;
  background: rgba(122, 117, 117, 0.5);
  padding-left: 30rpx;
  padding-top: 10rpx;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
}
.scroll-tab{
  width:fit-content;
  margin:0 auto;
  display:flex;
  justify-content: space-between;
  align-items: center;

}

.list-empty-nav-view {
  height: 100rpx;
  width: 100%;
  margin-bottom: 15rpx;

}


