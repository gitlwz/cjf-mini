/* pages/instruments_list/eggPrice/eggPrice.wxss */
page {
  background-color: #f5f5f5;
}
.forget {
  border: 0;
  width: 138rpx;
  font-size: 28rpx;
  height: 44rpx;
  padding: 0;
  margin: 0;
  line-height: 44rpx;
  color: rgba(153, 153, 153, 1);
  background: #fff;
}
.loading-place-holder {
  display: flex;
  min-height: 400rpx;
  width: 100%;
  flex-direction: column;
  align-items: center;
  justify-content: center
}
.loading-footer2 {
  width: 100%;
  height: 100rpx;
  display: flex;
  flex-direction: row;
  justify-content: center;
  align-items: center;
}
.load-text{
  font-size: 24rpx;
  color: #D0A16C;
  margin-left: 10rpx;
}
.no-more-footer {
  width: 100%;
  display: flex;
  justify-content: center;
  color: #ccc;
font-size: 24rpx;
}
.input-need {
  width: 100%;
  height: 744rpx;
  background: #fff;
  padding: 30rpx 30rpx 0;

}

.label {
  font-size: 32rpx;
  font-weight: 500;
  color: #333333;
  line-height: 48rpx;
  display: inline-block;
  margin-bottom: 10rpx;
}

.right-arrow {
  width: 28rpx;
  height: 28rpx;
  position: absolute;
  right: 0rpx;
}

.right-text {
  font-size: 28rpx;
  font-weight: 400;
  color: rgba(102, 102, 102, 1);
  float: right;
}
.submit{
  width:320rpx;
  height:80rpx;
  background:linear-gradient(270deg,rgba(234,207,165,1) 0%,rgba(208,161,108,1) 100%);
  border-radius:40rpx;
  line-height: 80rpx;
  margin-top: 35rpx;
  color:#fff;
}
.my-need{
  margin-top: 15rpx;
  width: 100%;
  background: #fff;
  padding: 30rpx 30rpx 0;
  position: relative;
}
.no-content{
  width: 340rpx;
  height: 249rpx;
  position: absolute;
  top: 0;
  right: 0;
  left: 0;
  bottom: 0;
  margin: auto;
}
.no-data{
  margin-top: 360rpx;
  text-align: center;
font-size:24rpx;
font-weight:400;
color:rgba(153,153,153,1);
}
.picker{
  width: 520rpx;
  height: 100rpx;
  display:flex;
  align-items:center;
  color:#333;
  position: relative;
}
.row{
  display: flex;
  align-items: center;
  height: 100rpx;
  justify-content: space-between;
  border-bottom:1px solid #F2F6F7;
}
.title{
font-size:30rpx;
font-family:PingFang SC;
color:rgba(51,51,51,1);
line-height:52rpx;
width: 180rpx;
}
.bubble{ 
 position: relative;
 overflow: hidden;
}
.bubble:after{
 content: "";
 background: rgb(255, 255, 255);
 position: absolute; 
 width: 750rpx;
 height: 750rpx;
 left: calc(50% - 375rpx);
 top: calc(50% - 375rpx);
 opacity: 0;
 margin: auto;
 border-radius: 50%;
 transform: scale(1);
 transition: all 0.6s ease-in-out;
}
.bubble:active:after {
 transform: scale(0);
 opacity: 1;
 transition: 0s;
}