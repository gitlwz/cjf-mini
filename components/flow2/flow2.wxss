/* components/flow2/flow2.wxss */
.content-container{
  background:#fff;
  position:relative;
}
.item{
position: absolute;
width: fit-content;
left:0;
right: 0;
margin:auto;
}
.listItem{
  display: flex;
flex-direction: row;
align-items: center;

}
.itemContent{
background:rgba(242,246,247,1);
border-radius:4px;
font-size:28rpx;
font-family:PingFangSC-Medium,PingFang SC;
font-weight:500;
color:rgba(51,51,51,1);
line-height:34rpx;
width: 517rpx;
padding: 26rpx 30rpx;
margin-left: 36rpx;
position: relative;
}
.arrow{
  position: absolute;
 width: 0;
 height: 0;
 top: 0;
 left:62rpx;
 bottom:0;
 margin: auto;
 border-width: 20rpx;
 border-style: solid;
 border-color: transparent rgba(242,246,247,1) transparent transparent;
}
.title{
font-size:42rpx;
font-family:PingFangSC-Medium,PingFang SC;
font-weight:500;
color:rgba(51,51,51,1);
line-height:60rpx;
}
.back{
  position: absolute;
  bottom:40rpx;
  width:670rpx;
height:90rpx;
background:#D0A16C;
border-radius:16rpx;
line-height:90rpx;
text-align: center;
font-size:32rpx;
font-family:PingFangSC-Regular,PingFang SC;
font-weight:400;
color:rgba(255,255,255,1);
}
.index{
  width:60rpx;
height:60rpx;
background:rgba(208,161,108,0.2);
font-size:32rpx;
font-weight:bold;
color:rgba(162,101,66,1);
line-height:60rpx;
text-align: center;
border-radius: 50%;
}
.nextStep{
  position: absolute;
  bottom:40rpx;
  width:670rpx;
height:90rpx;
line-height:90rpx;
text-align: center;
font-size:32rpx;
font-family:PingFangSC-Regular,PingFang SC;
font-weight:400;
color:rgba(255,255,255,1);
display: flex;
flex-direction: row;
justify-content: space-around;
}
.step{
  width: 330rpx;
  height: 100%;
  border-radius:8px;
}
.topContent{

font-size:28rpx;
font-family:PingFangSC-Medium,PingFang SC;
font-weight:500;
color:rgba(51,51,51,1);
line-height:34rpx;
}
.bottomTip{
font-size:24rpx;
font-family:PingFangSC-Regular,PingFang SC;
font-weight:400;
color:rgba(102,102,102,1);
line-height:34rpx;
}
